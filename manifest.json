{
  "manifest_version": 3,
  "name": "Chess.com Custom Skins",
  "version": "1.0",
  "action": {
    "default_popup": "Popup/popup.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "js": ["content.js", "content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/**"],
      "matches": ["*://*.chess.com/*"]
    }
  ]
}
